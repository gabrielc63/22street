<%# provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <div class="row">
        <% @feed_items.each do |post| %>
          <%= render partial: "posts/post", object: post %>
        <% end %>
      </div>
      <%= will_paginate @feed_items %>
    </div>
  </div>
<% else %>
<div class="text-center jumbotron">
  <h1>A modern social network</h1>
  <h2>
    This is
    <a>22 Street</a>
  </h2>

  <%= link_to "Sign up!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
